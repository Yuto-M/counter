// このオプションの意味
// @see https://qiita.com/filunK/items/429a060da20613a1dd9e#sourcemap
{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    // babelでトランスパイルするからesnext
    // @see https://qiita.com/hareku/items/dbf0752aa76499a895fd#target
    "target": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ]
  }
}